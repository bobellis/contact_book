<h3> Add Contact </h3>

<form action='/save_person' method='post'>
  <div class='form-group row'>
    <div class="col-sm-4">
      <label for='first_name'> First Name: </label>
      <input type='text' id='first_name' name='first_name' class="form-control">
    </div>

    <div class="col-sm-4">
      <label for='last_name'> Last Name: </label>
      <input type='text' id='last_name' name='last_name' class="form-control">
    </div>

    <div class="col-sm-4">
      <label for='birthday_month'> Birthday Month: </label>
      <input type='text' id='birthday_month' name='birthday_month' class="form-control">
    </div>

  </div>

  <button type='submit' class='btn btn-success'> Save Contact </button>
  <button type="reset" value="reset" class="btn btn-warning">Reset</button>
  <a href="\" role="button" class="btn btn-primary">Go Home</button></a>
</form>
